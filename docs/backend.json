
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Teach Mania application.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the user entity." },
        "email": { "type": "string", "description": "User's email address.", "format": "email" },
        "name": { "type": "string", "description": "User's full name." },
        "signUpDate": { "type": "string", "description": "Date and time the user signed up.", "format": "date-time" },
        "status": { "type": "string", "description": "The status of the user account.", "enum": ["active", "suspended"] }
      },
      "required": ["id", "email", "name", "signUpDate"]
    },
    "Course": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Course",
      "type": "object",
      "description": "Represents a course offered on the platform.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the course entity." },
        "name": { "type": "string", "description": "Name of the course." },
        "description": { "type": "string", "description": "Description of the course." },
        "price": { "type": "number", "description": "Price of the course." },
        "thumbnailUrl": { "type": "string", "description": "URL of the course thumbnail image.", "format": "uri" },
        "isFree": { "type": "boolean", "description": "Indicates if the course is free or paid." },
        "content": { "type": "array", "description": "Full course content available after enrollment.", "items": { "type": "object" } },
        "demoContent": { "type": "array", "description": "Publicly visible demo content for the course.", "items": { "type": "object" } }
      },
      "required": ["name", "description", "price", "thumbnailUrl", "isFree", "content"]
    },
    "TeamMember": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "TeamMember",
        "type": "object",
        "description": "Represents a member of the Teach Mania team.",
        "properties": {
            "name": { "type": "string", "description": "Name of the team member." },
            "role": { "type": "string", "description": "Role or designation of the team member." },
            "imageUrl": { "type": "string", "format": "uri", "description": "URL of the team member's photo." },
            "description": { "type": "string", "description": "A short bio or description." }
        },
        "required": ["name", "role", "imageUrl"]
    },
    "Service": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Service",
        "type": "object",
        "description": "Represents a service offered by Teach Mania, displayed on the home screen.",
        "properties": {
            "name": { "type": "string" },
            "description": { "type": "string" },
            "iconUrl": { "type": "string", "format": "uri" },
            "leftButtonText": { "type": "string" },
            "rightButtonText": { "type": "string" },
            "order": { "type": "number", "description": "Display order of the service." }
        },
        "required": ["name", "description", "iconUrl", "leftButtonText", "rightButtonText", "order"]
    },
    "Banner": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Banner",
        "type": "object",
        "description": "Represents a promotional banner for the home screen slider.",
        "properties": {
            "imageUrl": { "type": "string", "format": "uri" },
            "alt": { "type": "string", "description": "Alternative text for the banner image." },
            "link": { "type": "string", "format": "uri", "description": "Optional URL to navigate to on click." },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["imageUrl", "alt", "createdAt"]
    },
    "News": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "News",
        "type": "object",
        "description": "Represents a scrolling news item for the home screen ticker.",
        "properties": {
            "text": { "type": "string" },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["text", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": { "schema": { "$ref": "#/entities/User" }, "description": "Stores user profiles." }
      },
      {
        "path": "/courses/{courseId}",
        "definition": { "schema": { "$ref": "#/entities/Course" }, "description": "Stores all available courses." }
      },
      {
        "path": "/team/{memberId}",
        "definition": { "schema": { "$ref": "#/entities/TeamMember" }, "description": "Stores team member profiles." }
      },
      {
        "path": "/services/{serviceId}",
        "definition": { "schema": { "$ref": "#/entities/Service" }, "description": "Stores dynamic services for the home page." }
      },
      {
        "path": "/banners/{bannerId}",
        "definition": { "schema": { "$ref": "#/entities/Banner" }, "description": "Stores promotional banners for the home page." }
      },
      {
        "path": "/news/{newsId}",
        "definition": { "schema": { "$ref": "#/entities/News" }, "description": "Stores scrolling news for the home page ticker." }
      }
    ]
  }
}
